<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulisboa.tecnico.sise.insure.app.activities.HomeActivity">

    <Button
        android:id="@+id/home_btn_profile"
        android:layout_width="324dp"
        android:layout_height="64dp"
        android:layout_marginBottom="32dp"
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:text="Profile"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/home_btn_newclaim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/home_btn_newclaim"
        android:layout_width="324dp"
        android:layout_height="64dp"
        android:layout_marginBottom="32dp"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:text="New Insurance Claim"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/home_btn_claimhistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="50mm"
        android:layout_height="4dip"
        android:background="#AAA5A5"
        android:paddingBottom="10dip"
        app:layout_constraintBottom_toTopOf="@+id/home_btn_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.719" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="monospace"
        android:text="InSure"
        android:textColor="#040303"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="monospace"
        android:text="Menu"
        android:textColor="#AAA5A5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/home_btn_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/home_btn_claimhistory"
        android:layout_width="324dp"
        android:layout_height="64dp"
        android:layout_marginBottom="132dp"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:text="Insurance Claim History"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
        android:text="@string/btn_logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

</android.support.constraint.ConstraintLayout>
