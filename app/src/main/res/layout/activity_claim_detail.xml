<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulisboa.tecnico.sise.insure.app.activities.ClaimDetailActivity">

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="82dp"
        android:layout_height="35dp"
        android:text="@string/btn_logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/detailed_information_claim"
        android:layout_width="395dp"
        android:layout_height="39dp"
        android:text="@string/detailed_information_claim"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_logout"
        app:layout_constraintVertical_bias="0.866" />

    <View
        android:id="@+id/view2"
        android:layout_width="323dp"
        android:layout_height="7dp"
        android:background="#AAA5A5"
        android:paddingBottom="10dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.252" />

    <TextView
        android:id="@+id/claim_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/claim_information"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/claim_statuss"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:text="@string/claim_statuss"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.352" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="330dp"
        android:layout_height="289dp"
        android:layout_marginBottom="132dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/claim_information"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/title" />

        <TextView
            android:id="@+id/claim_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/claim_id" />

        <TextView
            android:id="@+id/issuing_date"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="@string/issuing_date" />

        <TextView
            android:id="@+id/plate"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="@string/plate" />

        <TextView
            android:id="@+id/claim_description"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:text="@string/claim_description" />

    </LinearLayout>

    <Button
        android:id="@+id/detailed_inf_back"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_weight="1"
        android:drawableLeft="@android:drawable/ic_menu_revert"
        android:text="@string/detailed_inf_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.959" />


</android.support.constraint.ConstraintLayout>


